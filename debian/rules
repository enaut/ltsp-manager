#!/usr/bin/make -f

DEBVERS := $(shell dpkg-parsechangelog | sed -n -e 's/^Version: //p')

%:
	dh $@

override_dh_install:
	dh_install
	echo "__version__='$(DEBVERS)'" > "$(CURDIR)/debian/ltsp-manager/usr/share/ltsp-manager/version.py"

override_dh_installinit:
	dh_installinit --name=ltsp-shared-folders
